{
    "i18n": true,
    "type": "panel",
    "items": {
        "kofi": {
            "type": "staticImage",
            "label": "Support the dev",
            "href": "https://ko-fi.com/O4O8U5J2B",
            "newLine": true,
            "src": "https://ko-fi.com/img/githubbutton_sm.svg"
        },
        "ipAddress": {
            "type": "text",
            "label": "ipAddress",
            "sm": 3,
            "newLine": true
        },
        "username": {
            "type": "text",
            "label": "username",
            "help": "usernameHelp",
            "sm": 3
        },
        "password": {
            "type": "password",
            "help": "credentialsHelp",
            "label": "password",
            "sm": 3
        },
        "updateInterval": {
            "type": "number",
            "default": 300,
            "label": "updateInterval",
            "help": "updateIntervalHelp",
            "sm": 3
        },
        "pathFlavor": {
            "type": "select",
            "options": [
                { "label": "Path + Tag Id (e.g. 'Heating.A32')", "value": 0 },
                { "label": "Path + Name (e.g. 'Heating.Target value')", "value": 1 }
            ],
            "default": 1,
            "label": "pathFlavor",
            "help": "pathFlavorHelp",
            "sm": 6,
            "newLine": true
        },
        "removeWhitespace": {
            "type": "checkbox",
            "default": true,
            "label": "removeWhitespace",
            "sm": 6
        }
    }
}
